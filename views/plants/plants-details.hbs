<h2 class="all-plants-title">Details:</h2>

<div class="details-container">
    <div>
        <img class="details-image" src="{{this.image}}" alt="">
    </div>
    <div>
        <h3>{{this.name}}</h3>
        <p>Description: {{this.description}}</p>
        <h4>Sun: {{this.sun}}</h4>
        <h4>Water: {{this.water}}</h4>
        <h4>Price: {{this.price}}</h4>
        <div>
            <a href="">Add to basket</a>
            <a href="">Add to favourites list</a>
        </div>
    </div>
</div>
<div>
    <form action="/plants/{{this._id}}/delete" method="POST">
        <button>Delete</button>
    </form>
    <form action="/plants/{{this._id}}/edit" method="POST">
        <button>Edit</button>
    </form>
</div>