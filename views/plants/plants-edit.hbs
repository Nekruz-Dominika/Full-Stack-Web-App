<h1>Edit details:</h1>

<form action="/plants/{{plant._id}}/edit" method="POST">
    <label>Name:
        <input type="text" name="name" value="{{plant.name}}">
    </label>
    <label>Description:
        <input type="text" name="description" value="{{plant.description}}">
    </label>
    <label>Sun:
        <input type="text" name="sun" value="{{plant.sun}}">
    </label>
    <label>Water:
        <input type="text" name="water" value="{{plant.water}}">
    </label>
    <label>Price:
        <input type="text" name="price" value="{{plant.price}}">
    </label>
    <label>Image:
        <input type="text" name="image" value="{{plant.image}}">
    </label>
    <button type="submit">Add new plant</button>
</form>