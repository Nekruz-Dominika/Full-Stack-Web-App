<h1>Edit details:</h1>

<form action="/plants/{{this._id}}/edit" method="POST">
    <label>Name:
        <input type="text" name="name" value="{{this.name}}">
    </label>
    <label>Description:
        <input type="text" name="description" value="{{this.description}}">
    </label>
    <label>Sun:
        <input type="text" name="sun" value="{{this.sun}}">
    </label>
    <label>Water:
        <input type="text" name="water" value="{{this.water}}">
    </label>
    <label>Price:
        <input type="text" name="price" value="{{this.price}}">
    </label>
    <label>Image:
        <input type="text" name="image" value="{{this.image}}">
    </label>
    <button type="submit">Edit plant</button>
</form>